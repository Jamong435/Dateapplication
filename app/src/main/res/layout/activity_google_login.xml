<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back2"
    tools:context=".GoogleLogin">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:gravity="center"
        android:paddingTop="80dp"
        android:text="LOGIN"
        android:textColor="#F2C94C"
        android:textSize="55dp" />

    <EditText

        android:id="@+id/et_id"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="#F2C94C"
        android:ems="10"
        android:textSize="20dp"
        android:fontFamily="@font/bold"
        android:hint="   ID"
        android:textColorHint="#F2C94C" />

    <com.google.android.material.textfield.TextInputLayout

        android:id="@+id/layout_et"

        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_id"
        android:layout_centerInParent="true"
        android:layout_margin="16dp"
        android:backgroundTint="#ffff"
        android:hint=" password"
        android:textColorHint="#F2C94C"
        app:boxBackgroundColor="#00000000"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:backgroundTint="#F2C94C"/>


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_login1"
        android:layout_width="130dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_et"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/bold"
        android:text="로그인"
        android:textColor="#F2C94C" />

    <Button
        android:textSize="20dp"
        android:id="@+id/btn_register"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_et"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:backgroundTint="#00000000"
        android:fontFamily="@font/bold"
        android:text="회원가입"
        android:textColor="#F2C94C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_register"
        android:layout_marginTop="8dp"
        android:text="아이디 / 비밀번호 찾기"
        android:layout_centerInParent="true"
        android:textColor="#F2C94C"
        android:fontFamily="@font/bold"
        android:onClick="clicktextview"
        android:textSize="15dp"/>







    <com.kakao.usermgmt.LoginButton

        android:id="@+id/btn_login"
        android:layout_width="320dp"

        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="90dp" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_google"
        android:layout_width="320dp"
        android:layout_centerInParent="true"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>


</RelativeLayout>